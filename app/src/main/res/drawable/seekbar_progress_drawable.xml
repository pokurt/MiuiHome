<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:id="@android:id/background">
    <shape>
      <corners android:radius="50dp" />
      <gradient
        android:angle="270"
        android:centerColor="@color/colorTrack"
        android:centerY="0.75"
        android:endColor="@color/colorTrack"
        android:startColor="@color/colorTrack" />
    </shape>
  </item>
  <item android:id="@android:id/progress">
    <clip>
      <shape>
        <corners android:radius="50dp" />
        <solid android:color="#0d7AEC" />
      </shape>
    </clip>
  </item>
</layer-list>